<%- layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/stars.css" />
<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= mofoto.image %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= mofoto.title %></h5>
        <p class="card-text"><%= mofoto.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= mofoto.location %></li>
        <li class="list-group-item">
          Submitted by: <%= mofoto.author.username %>
        </li>
        <li class="list-group-item">$<%= mofoto.price %></li>
      </ul>
      <%if (currentUser && mofoto.author.equals(currentUser._id)) {%>
      <div class="card-body">
        <a class="card-link btn btn-info" href="/mofotos/<%= mofoto._id %>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/mofotos/<%= mofoto._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <% } %>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
  </div>
  <div class="col-6">
    <% if(currentUser){ %>
    <h2>Leave a Review</h2>
    <form
      action="/mofotos/<%= mofoto._id %>/reviews "
      method="POST"
      class="mb-3 validated-form"
      validated
    >
      <div class="mb-3">
        <label class="form-label" for="rating">Rating</label>
        <input
          class="form-range"
          type="range"
          min="1"
          max="5"
          name="review[rating]"
          id="rating"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control"
          name="review[body]"
          id="body"
          cols="30"
          rows="5"
          required
        ></textarea>
      </div>
      <button class="btn btn-success">Submit</button>
    </form>
    <% } %> <% for(let review of mofoto.reviews) {%>
    <div class="mb-3 card">
      <div class="card-body">
        <h5 class="card-title"><%= review.author.username %></h5>
        <p class="starability-result" data-rating="<%= review.rating %>">
          Rated: <%= review.review %> stars
        </p>
        <!-- <h6 class="card-subtitle mb-2 text-muted">
          By <%= review.author.username %>
        </h6> -->
        <p class="card-text">Review: <%= review.body %></p>
        <%if (currentUser && review.author.equals(currentUser._id)) {%>
        <form
          action="/mofotos/<%= mofoto._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-sm btn-danger">Delete</button>
        </form>
        <% }%>
      </div>
    </div>
    <%}%>
  </div>
</div>
